{
  "version": "2.0",
  "verbose": false,
  "ciMode": false,

  "output": {
    "directory": "generated",
    "openInEditor": true,
    "editor": "code"
  },

  "builds": {
    "Test": {
      "description": "Test build for development",
      "type": "standard",

      "input": "tests/test.luau",
      "output": "generated/test.client.luau",

      "darklua": {
        "enabled": true,
        "stages": [
          {
            "name": "bundle",
            "config": "pipeline/.darklua/debug.json"
          }
        ]
      },

      "template": {
        "enabled": true,
        "source": "pipeline/templates/frame.luau"
      },

      "stylua": {
        "enabled": false
      },

      "prompts": {
        "version": false,
        "deploy": false
      },

      "deployment": {
        "enabled": false
      }
    },

    "Debug": {
      "description": "Debug build with full source",
      "extends": "Test",

      "input": "src/init.luau",
      "output": "generated/debug.luau"
    },

    "Beta": {
      "description": "Beta release build with minification",
      "type": "standard",

      "input": "src/init.luau",
      "output": "generated/dist.luau",

      "darklua": {
        "enabled": true,
        "stages": [
          {
            "name": "bundle-optimize",
            "config": "pipeline/.darklua/production.json"
          },
          {
            "name": "minify",
            "config": "pipeline/.darklua/minify.json"
          }
        ]
      },

      "template": {
        "enabled": true,
        "source": "pipeline/templates/frame.luau"
      },

      "stylua": {
        "enabled": false
      },

      "prompts": {
        "version": true,
        "deploy": true
      },

      "deployment": {
        "enabled": true,
        "prerelease": true,
        "github": {
          "enabled": true,
          "owner": "Axp3cter",
          "repo": "UniversalSynSaveInstance",
          "apiKeyEnv": "GITHUB_API_KEY"
        }
      }
    },

    "Release": {
      "description": "Production release build with full optimization",
      "extends": "Beta",

      "deployment": {
        "enabled": true,
        "prerelease": false,
        "github": {
          "enabled": true,
          "owner": "Axp3cter",
          "repo": "UniversalSynSaveInstance",
          "apiKeyEnv": "GITHUB_API_KEY"
        }
      }
    }
  }
}
