{
    "openComposedOutput": true,

    "deployment": {
        "enabled": true,
        "github": {
            "enabled": true,
            "owner": "Axp3cter",
            "repo": "Beehemoth"
        }
    },

    "buildConfigs": [
        {
            "name": "Test",

            "promptVersion": false,
            "promptDeploy": false,

            "frame": "pipeline/frame.luau",
            "darkluaConfig": "pipeline/.darklua_debug.json",
            "input": "tests/test.luau",
            "output": "generated/test.client.luau"
        },

        {
            "name": "Debug",

            "promptVersion": false,
            "promptDeploy": false,

            "frame": "pipeline/frame.luau",
            "darkluaConfig": "pipeline/.darklua_debug.json",
            "input": "src/init.luau",
            "output": "generated/debug.luau"
        },

        {
            "name": "Beta",

            "promptVersion": true,
            "promptDeploy": true,
            "prerelease": true,

            "frame": "pipeline/frame.luau",
            "darkluaConfig": "pipeline/.darklua.json",
            "input": "src/init.luau",
            "output": "generated/dist.luau"
        },

        {
            "name": "Release",
            
            "promptVersion": true,
            "promptDeploy": true,

            "frame": "pipeline/frame.luau",
            "darkluaConfig": "pipeline/.darklua.json",
            "input": "src/init.luau",
            "output": "generated/dist.luau"
        }
    ]
}